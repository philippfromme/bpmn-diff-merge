{
  "name": "bpmn-diff-merge",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "bpmndiff": "./bin/diff.js",
    "bpmnmerge": "./bin/merge.js"
  },
  "scripts": {
    "copy:fonts": "cp -R node_modules/@ibm/plex ./dist/fonts",
    "copy:diff": "cp ./src/diff/index.html ./dist/diff/index.html",
    "copy:merge": "cp ./src/merge/index.html ./dist/merge/index.html",
    "build": "node esbuild.config.mjs && npm run copy:fonts && npm run copy:diff && npm run copy:merge",
    "build:watch": "node esbuild.config.mjs --watch",
    "test:diff": "node ./bin/diff.js ./test/fixtures/local.bpmn ./test/fixtures/remote.bpmn",
    "test:merge": "node ./bin/merge.js ./test/fixtures/base.bpmn ./test/fixtures/local.bpmn ./test/fixtures/remote.bpmn ./test/fixtures/merged.bpmn"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "@carbon/colors": "^11.37.0",
    "@carbon/icons-react": "^11.64.0",
    "@carbon/react": "^1.88.0",
    "@ibm/plex": "^6.4.1",
    "bpmn-js": "^18.6.2",
    "bpmn-js-differ": "file:.yalc/bpmn-js-differ",
    "bpmn-moddle": "^9.0.2",
    "classnames": "^2.5.1",
    "express": "^5.1.0",
    "open": "^10.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zeebe-bpmn-moddle": "^1.11.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.8",
    "esbuild-sass-plugin": "^3.3.1",
    "sass": "^1.90.0"
  }
}
